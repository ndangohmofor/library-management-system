{
  "name": "server",
  "version": "1.0.0",
  "description": "Nodejs backend server for the library management system",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "npm run start:dev",
    "start:dev": "nodemon --config nodemon.json",
    "start:prod": "npm run build && node dist/server.js",
    "build": "rimraf ./dist && tsc",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "api-test": "mocha",
    "test": "DATABASE_NAME='testLibrary' PORT=5200 start-test start:prod http://127.0.0.1:5200 api-test"
  },
  "author": "IM Ndango",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/aiplatform": "^3.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-jwt": "^8.4.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.4.0",
    "openai": "^4.28.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "assert": "^2.1.0",
    "eslint": "^8.57.0",
    "mocha": "^10.3.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "start-server-and-test": "^2.0.3",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.0.4",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  }
}
